<head>
    <link href="/css/widgetsCSS/nextAppointment.css" rel="stylesheet" type="text/css" />
</head>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-5">Patient Appointments</h4>

                    <div class="hori-timeline" dir="ltr">
                        <ul class="list-inline events">
                    
                            <% if (patient.appointments && patient.appointments.length > 0) { %>
                                <% patient.appointments.sort((a, b) => new Date(b.date) - new Date(a.date)).forEach(function(appointment) { %>
                                    <% if(appointment && appointment.date) { %>
                    
                                    <li class="list-inline-item event-list">
                                        <a href="/appointments/details/<%= appointment._id %>" class="appointment-link"> <!-- Assuming 'id' is the unique identifier for the appointment -->
                                            <div class="px-4">
                                                <div class="event-date 
                                                    <%= appointment.status === 'Cancelled' ? 'bg-soft-danger text-danger' : 
                                                       appointment.status === 'Scheduled' ? 'bg-soft-success text-success' : 
                                                       appointment.status === 'Completed' ? 'bg-soft-primary text-primary' : '' %>"
                                                ><%= appointment.date.toLocaleDateString() %></div>
                                                <h5 class="font-size-16"><strong></strong> <%= appointment.location %></h5>
                    
                                                <p class="text-muted"><strong>Status:</strong> <%= appointment.status.charAt(0).toUpperCase() + appointment.status.slice(1) %></p>
                                            </div>
                                        </a>
                                    </li>
                    
                                    <% } %>
                                <% }); %>
                            <% } else { %>
                            <li class="list-inline-item event-list">
                                <div class="px-4">
                                    <p class="text-muted">No appointments available for this patient.</p>
                                </div>
                            </li>
                            <% } %>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


