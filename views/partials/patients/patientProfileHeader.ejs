<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<div class="container mt-5">
    <div class="profile-page">
        <div class="row">
            <div class="col-12 col-md-3">
                <!-- Profile Picture and Name (Left Sidebar for Desktop, Top section for Mobile) -->
                <div class="d-flex flex-column align-items-center text-center mb-4">
                    <img class="rounded-circle" src="<%= patient.photo || '/uploads/avatar.png' %>" alt="profile" style="width: 100px; height: 100px;">
                    <h4 class="mt-3"><%= patient.firstName %> <%= patient.lastName %></h4>     
                </div>
            </div>
            <div class="col-12 col-md-9">
                
                <!-- Profile Header (Action Buttons) -->
                <div class="d-flex justify-content-end mb-3">
                    <div class="btn-group" role="group" aria-label="Patient Actions">
                        <a href="/appointments/schedule/<%= patient._id %>" class="btn btn-success btn-sm">Schedule</a>
                        
                    </div>
                    <div class="btn-group" role="group" aria-label="Patient Actions">
                        
                        <a href="/patients/edit/<%= patient._id %>" class="btn btn-warning btn-sm" title="Edit Patient Information">Edit Info</a>
                    </div>
                </div>

                <!-- Profile Navigation -->
                <ul class="nav nav-tabs mb-3" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#personal-info" role="tab">Personal Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#medical-history" role="tab">Medical History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#prescriptions" role="tab">Prescriptions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#lab-results" role="tab">Lab Results</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#appointments" role="tab">Appointments</a>
                    </li>
                </ul>


            </div>
        </div>
    </div>
</div>
