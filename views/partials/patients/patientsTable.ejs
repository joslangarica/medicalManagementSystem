
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Patients</h1>
        <div class="table-container">
            <table class="table table-striped table-hover">
                  <thead>
        <tr>
            <th>Name</th>
            <th>Contact Information</th>
            <th>Next Visit Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% patients.forEach(patient => { %>
            <tr>
                <td><%= patient.firstName %> <%= patient.lastName %></td>
                <td><%= patient.contact.email %></td>
                <td><%= patient.nextAppointmentDate ? patient.nextAppointmentDate.toLocaleDateString() : "N/A" %></td>
                <td><%= patient.patientStatus %></td>
                <td class="action-buttons">
                    <a href="/patients/<%= patient._id %>" class="btn btn-info btn-sm">View</a>
                    <a href="/patients/edit/<%= patient._id %>" class="btn btn-warning btn-sm">Edit</a>
              
                    <a href="/appointments/schedule/<%= patient.id %>" class="btn btn-success btn-sm">Schedule</a>

                </td>
            </tr>
        <% }); %>
    </tbody>
            </table>
        </div>
    </div>

</body>
