<head>
        
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<div class="col-md-4 col-xl-3 left-wrapper">

    <div class="card shadow-lg rounded">

        <!-- Patient's Quick Actions -->
        <div class="card-header bg-primary text-white p-3">
            <div class="d-flex align-items-center justify-content-between">
                <h4 class="text-white">Personal Info</h3>

                <!-- Quick actions -->
                <a href="/patients/edit/<%= patient._id %>" class="btn btn-light btn-sm" title="Edit Patient Information">
                    <i class="fas fa-edit"></i>
                </a>
                
                
            </div>
        </div>

        <!-- Patient's Details -->
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <i class="fas fa-birthday-cake text-muted me-2"></i>
                <%= new Date(patient.dateOfBirth).getDate() %>/<%= new Date(patient.dateOfBirth).getMonth() + 1 %>/<%= new Date(patient.dateOfBirth).getFullYear() %>

            </li>

            <li class="list-group-item">
                <i class="fas fa-phone-alt text-muted  me-2"></i>
                <%= patient.contact.phone %>
            </li>

            <li class="list-group-item">
                <i class="fas fa-phone-volume   me-2 text-danger"></i>
                SOS: <%= patient.emergencyContact.phone %>
            </li>

            <li class="list-group-item">
                <i class="fas fa-envelope text-muted me-2"></i>
                <%= patient.contact.email %>
            </li>

            <li class="list-group-item">
                <i class="fas fa-map-marker-alt text-muted me-2"></i>
                <%= patient.address.street %>
            </li>
            
        </ul>
    </div>
</div>

