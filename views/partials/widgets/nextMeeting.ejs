<head>
    <!-- Timeline css in public folder -->
    <link href="/css/widgetsCSS/nextAppointment.css" rel="stylesheet" type="text/css" />
</head>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-5">Next Appointments</h4>

                    <div class="hori-timeline" dir="ltr">
                        <ul class="list-inline events">

                            <% if (nextAppointments && nextAppointments.length > 0) { %>
                                <% nextAppointments.forEach(function(appointment) { %>

                                    <li class="list-inline-item event-list">
                                        <a href="/appointments/details/<%= appointment._id %>" class="appointment-link">
                                            <div class="px-4">
                                                <div class="event-date 
                                                    <%= appointment.status === 'Cancelled' ? 'bg-soft-danger text-danger' : 
                                                       appointment.status === 'Scheduled' ? 'bg-soft-success text-success' : 
                                                       appointment.status === 'Completed' ? 'bg-soft-primary text-primary' : '' %>"
                                                ><%= appointment.date.toLocaleDateString() %></div>
                                                <h5 class="font-size-16"><strong> <%= appointment.patientId.firstName %> <%= appointment.patientId.lastName %></strong></h5>
                                                <p class="text-muted"> <%= appointment.date.toLocaleTimeString() %> </p>
                                                
                                                
                                            </div>
                                        </a>
                                    </li>

                                <% }); %>

                            <% } else { %>
                            <li class="list-inline-item event-list">
                                <div class="px-4">
                                    <p class="text-muted">No upcoming appointments</p>
                                </div>
                            </li>
                            <% } %>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


