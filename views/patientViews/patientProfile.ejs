<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Patient Profile</title>

</head>
<body>
   

   <div class="patient-profile-container">

    <!-- Profile Header -->
    <%- include('../partials/patients/patientProfileHeader.ejs') %> 
        
    <!-- Tab contents -->
    <div class="tab-content">
        <!-- Personal Info Content -->
        <div class="tab-pane active row profile-body" id="personal-info">
            <%- include('../partials/patients/personalInfo.ejs') %>  
        </div>

        <!-- Medical History Content -->
        <div class="tab-pane row profile-body" id="medical-history">
            <%- include('../partials/patients/patientMedicalHistory.ejs') %>  
        </div>

        <!-- Prescriptions -->
        <div class="tab-pane row profile-body" id="prescriptions">
            <%- include('../partials/patients/patientPrescriptions.ejs') %>  
        </div>
        
        <!-- Appointments -->
        <div class="tab-pane row profile-body" id="appointments">
            <%- include('../partials/appointments/appointmentsHistory.ejs') %> 
        </div>
    </div>

</div>

<!-- Include the scripts necessary for tabs to work -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

   
</body>
</html>
